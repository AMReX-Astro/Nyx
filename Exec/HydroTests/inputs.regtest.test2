# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 10000
stop_time =  0.05

max_step = 3

amr.checkpoint_files_output = 0

# Note we now set USE_CONST_SPECIES = TRUE in the GNUmakefile
nyx.h_species=.76
nyx.he_species=.24

nyx.small_temp = 1.e-4
nyx.small_dens = 1.e-6

nyx.gamma = 1.4

nyx.initial_z = 0.

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic = 0 1 1
geometry.coord_sys   = 0  
geometry.prob_lo     = 0  0     0
geometry.prob_hi     = 1  0.125 0.125

amr.n_cell           = 32 4 4
amr.max_level        = 2
amr.ref_ratio        = 2 2
amr.ref_ratio        = 4 4 4

# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# >>>>>>>>>>>>>  BC FLAGS <<<<<<<<<<<<<<<<
nyx.lo_bc       =  2   0   0
nyx.hi_bc       =  2   0   0

# WHICH PHYSICS
nyx.do_hydro = 1
nyx.do_grav  = 0

# COMOVING
nyx.comoving_OmM = 1.0e0
nyx.comoving_OmB = 0.0e0
nyx.comoving_h   = 0.0e0

nyx.ppm_type    = 1

# TIME STEP CONTROL
nyx.dt_cutoff      = 5.e-20  # level 0 timestep below which we halt
nyx.cfl            = 0.9     # cfl number for hyperbolic system
nyx.init_shrink    = 1.0     # scale back initial timestep
nyx.change_max     = 1.05    # scale back initial timestep

# DIAGNOSTICS & VERBOSITY
nyx.sum_interval = 1       # timesteps between computing mass
nyx.v            = 1       # verbosity in Castro.cpp
amr.v               = 1       # verbosity in Amr.cpp
#amr.grid_log       = grdlog  # name of grid logging file

# REFINEMENT / REGRIDDING
amr.regrid_int      = 2       # how often to regrid
amr.blocking_factor = 4 8 8   # block factor in grid generation
amr.max_grid_size   = 32
amr.n_error_buf     = 2 2 2 2 # number of buffer cells in error est

# CHECKPOINT FILES
amr.check_file      = chk     # root name of checkpoint file
amr.check_int       = 1000            # number of timesteps between checkpoints

# PLOTFILES
amr.plot_file       = plt     # root name of plotfile
amr.plot_int        = 1000            # number of timesteps between plotfiles
amr.plot_vars       = density 
amr.derive_plot_vars= x_velocity eint_E pressure Temp # these variables appear in the plotfile

#PROBIN FILENAME
amr.probin_file = ""

prob.idir = 1
prob.frac = 0.5
prob.p_l = 0.4
prob.u_l = -2.0
prob.rho_l = 1.0
prob.p_r = 0.4
prob.u_r = 2.0
prob.rho_r = 1.0

amr.refinement_indicators = denerr dengrad presserr pressgrad velgrad
amr.denerr.max_level = 3
amr.denerr.value_greater = 3
amr.denerr.field_name = density
amr.dengrad.max_level = 3
amr.dengrad.adjacent_difference_greater = 0.01
amr.dengrad.field_name = density

amr.presserr.max_level = 3
amr.presserr.value_greater = 3
amr.presserr.field_name = pressure
amr.pressgrad.max_level = 3
amr.pressgrad.adjacent_difference_greater = 0.01
amr.pressgrad.field_name = pressure

amr.velgrad.max_level = 3
amr.velgrad.adjacent_difference_greater = 0.01
amr.velgrad.field_name = x_velocity
